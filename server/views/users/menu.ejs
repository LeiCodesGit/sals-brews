    <%- include('../partials/head') %>

        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                background: #cbb897 !important;
                margin: 0;
                font-family: "Bricolage Grotesque", sans-serif;
            }

            .menu-section {
                margin: auto;
                text-align: center;
                padding: 40px 20px;
                font-family: "Lora", serif;
            }

            .menu-section .menu-title {
                font-family: "Bricolage Grotesque", sans-serif;
                font-size: 40px;
                color: #452e1e;
                margin-bottom: 30px;
                text-transform: uppercase;
                font-weight: 700;
            }

            .menu-title {
                font-family: "Bricolage Grotesque", sans-serif;
                font-size: 40px;
                color: #f7efda;
                text-transform: uppercase;
                letter-spacing: 2px;
            }

            .menu-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
                gap: 20px;
                justify-content: center;
                justify-items: center;
            }

            .menu-item {
                background-color: #452e1e;
                border-radius: 8px;
                padding: 15px;
                text-align: center;
                box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
                color: #e9ddca;
                margin-bottom: 20px;

                display: flex;
                flex-direction: column;
                align-items: center;
                transition: transform 0.3s ease, box-shadow 0.5s ease;
            }

            .menu-item img {
                width: 100%;
                margin-bottom: 8px;
                background-color: #f7efda;
                border-radius: 8px;
            }

            .menu-item p {
                margin: 4px 0;
                font-family: "Bricolage Grotesque", sans-serif;
            }

            .menu-grid .buy-btn {
                display: inline-block;
                margin-top: 10px;
                padding: 8px 16px;
                background-color: #733015;
                color: #e9ddca;
                border: none;
                border-radius: 5px;
                text-decoration: none;
                margin-bottom: 20px;
                font-weight: bold;

            }

            .menu-item .buy-btn {
                margin-top: 12px;
            }

            .menu-container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 0 20px;
            }

            .tabs {
                margin-bottom: 20px;
                justify-content: center;
                display: flex;
                gap: 2rem;
            }

            .tab:hover {
                color: #47532b;
                transform: scale(1.05);
            }


            .tab.active:hover {
                border-bottom: 2px solid #47532b;
            }


            .tabs .tab {
                font-size: 40px;
                color: #452e1e;
                padding: 5px 10px;
                font-weight: 700;
                font-family: "Bricolage Grotesque", sans-serif;
                cursor: pointer;
                position: relative;

            }

            .buy-btn:hover {
                background-color: #47532b;
                color: #f7efda;
                transform: scale(1.1);
            }

            .menu-item:hover {
                transform: scale(1.1);
                transition: transform 0.3s ease, box-shadow 0.5s ease;
                box-shadow: 4px 4px 7px rgba(0, 0, 0, 0.3);
            }

            .page-wrapper {
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }

            html,body{
                height: 100%;
                margin: 0;
            }

            .menu-container {
                flex: 1;
            }
        </style>

</head>

