<body>
    <div class="page-wrapper">
        <%- include('../partials/navbar') %>
            <div id="content">
                <div id="user-profile">
                    <h1>USER PROFILE</h1>
                    <div id="user-content">
                        <div class="container">
                            <div class="user-info">
                                <label for="full-name">Full Name:</label>
                                <input type="text" name="full-name" id="full-name" placeholder="" readonly>
                            </div>
                            <div class="user-info">
                                <label for="age">Age:</label>
                                <input type="number" name="age" id="age" placeholder="" min="0" readonly>
                            </div>
                            <div class="user-info">
                                <label for="address">Address:</label>
                                <input type="text" name="address" id="address" placeholder="" readonly>
                            </div>
                        </div>

                        <div class="container">
                            <div class="user-info">
                                <label for="contact-number">Contact Number:</label>
                                <input type="tel" name="contact-number" id="contact-number" placeholder="" readonly>
                            </div>
                            <div class="user-info">
                                <label for="email">Email:</label>
                                <input type="email" name="email" id="email" placeholder="" readonly>
                            </div>
                            <div class="user-info">
                                <label for="password">Password:</label>
                                <input type="password" name="password" id="password" placeholder="" readonly>
                            </div>
                        </div>
                    </div>
                    <div id="buttons">
                        <button id="edit-profile">EDIT PROFILE</button>
                        <button id="cancel-edit">CANCEL EDIT</button>
                    </div>
                </div>

                <div id="orders">
                    <h2>ORDERS</h2>
                    <div id="select">
                        <a href="#">Ongoing</a>
                        <a href="#">History</a>
                    </div>

                    <div id="table">
                        <table>
                            <colgroup>
                                <col style="width: 15%;">
                                <col style="width: 15%;">
                                <col style="width: 20%;">
                                <col style="width: 30%;">
                                <col style="width: 10%;">
                                <col style="width: 20%;">
                            </colgroup>
                            <thead>
                                <tr>
                                    <th>Order Id</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Address</th>
                                    <th>Total</th>
                                    <th><i class="fa-solid fa-mug-saucer"></i></th>
                                </tr>
                            </thead>
                            <tbody>
